openssl req -x509 -nodes -days 365 -newkey rsa:2048 \
    -keyout aib.avalue.com.key \
    -out aib.avalue.com.crt \
    -subj "/C=TW/ST=Taiwan/L=New Taipei City/O=Avalue/CN=aib.avalue.com"

# sudo chmod 600 aib.avalue.com.key
# sudo chmod 644 aib.avalue.com.crt
# sudo mv aib.avalue.com.key /etc/nginx/certs/
# sudo mv aib.avalue.com.crt /etc/nginx/certs/